@import "../../utils/template.wxss";

.map_normal {
    width: 100%;
    height: 50%;
}

.map_checked {
    width: 100%;
    height: 95%;
}

.catogory {
    width: 80%;
    background-color: white;
}

.check {
    text-align: center;
    background-color: #1e50a2;
    color: #dcdcdc;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.place {
    width: 20%;
    color: #dcdcdc;
    background-color: #1e50a2;
}

.line {
    width: 100%;
    height: 2rpx;
    background: #aaa;
}
.m-poi .line {
    width: 100%;
    height: 2rpx;
    background: #c0c0c0;
}


.placeBtn {
    font-size: 30rpx;
}

.bottom_normal {
    width: 100%;
    height: 45%;
    display: flex;
    flex-direction: row;
}

.bottom_checked {
    display: none;
}

.campus {
    display: flex;
    justify-content: center;
    font-size: 40rpx;
}

.container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.tip {
    position: absolute;
    top: 60%;
    left: 20rpx;
}

.tip-img {
    width: 30px;
    height: 30px;
    margin: 5px auto;
}
